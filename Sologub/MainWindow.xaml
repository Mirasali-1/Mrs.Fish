<Window x:Class="Sologub.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sologub"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="249*"/>
            <ColumnDefinition Width="251*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80*"/>
            <RowDefinition Height="558*"/>
            <RowDefinition Height="170*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="АО Интерстеллар"
                   Grid.Row="1"
                   Grid.Column="1"
                   FontSize="25" Margin="150,125,150,300"/>
        <TextBlock Text="инновационная IT-компания, специализирующаяся на разработке веб и мобильных приложений. Мы создаём высокотехнологичные решения для бизнеса, автоматизируем процессы и помогаем компаниям выходить на новый уровень. Наша команда объединяет опытных разработчиков, дизайнеров и аналитиков, чтобы превращать идеи в надежные и удобные цифровые продукты."
                   TextWrapping="Wrap"
                   TextAlignment="Center"
           Grid.Row="1"
           Grid.Column="1"
           FontSize="12" Height="180" Width="250"/>
        <StackPanel Grid.Column="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center" Margin="0,17,0,107" Width="502" Grid.Row="1"/>
        <StackPanel Orientation="Vertical" Margin="90,400,90,10" Grid.Row="1">
            <TextBlock Text=""/>
            <Button x:Name="Knopkaesss"
                        Content="Откликнуться"
                        Foreground="White"
                        FontSize="22"
                        Margin="5, 10"
                        Background="IndianRed"
                        Click="Knopkaesss_Click" Height="80" Width="304"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Stretch"
                    Grid.ColumnSpan="2"
                    Background="Gray"/>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Stretch"
                    Grid.Row="3"
                    Grid.ColumnSpan="2"
                    Background="Gray"/>
        <Image Source="D:\иконка1.png" Grid.Column="1"
               HorizontalAlignment="Right"/>
        <StackPanel Orientation="Horizontal" Grid.ColumnSpan="2"
                    Grid.Row="0">
            <TextBlock Text="Find Worker"
                       Foreground="White"
                       FontSize="38"
                       />
        </StackPanel>
                    
        <Frame
               Grid.Column="1"
               Name="FrmPages" Margin="0,117,0,0" Grid.RowSpan="2"/>
    </Grid>
</Window>
